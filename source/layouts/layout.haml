!!!
%html
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %link{rel: "icon", href: "/favicon.ico", type: "image/x-icon"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Scool"
    %meta{content: current_page.data.description || "Scool", name: "description"}/
    %meta{content: current_page.data.keywords || "Scool", name: "keywords"}/

    %meta{content: "width=device-width", name: "viewport"}/
    / Place favicon.ico and apple-touch-icon.png in the root directory
    = stylesheet_link_tag "application.css"
    = javascript_include_tag "vendor/modernizr-2.6.1.min.js"
  %body
    /[if lt IE 8]
      %p.chromeframe
        You are using an outdated browser.
        %a{href: "http://browsehappy.com/"} Upgrade your browser today
    .header_column
      %p.top_text.light-gray learn for love...
      = image_tag('img/logo.png', alt: 'scool', class: 'logo')
      %p.business_motto
        szkoła językowa blisko domu
      %p.business_motto_languages
        %span.green angielski
        i
        %span.pink hiszpański
    = yield
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"
    = javascript_include_tag "main.js"
    
  :javascript
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-XXXXXXX-X']);
    _gaq.push(['_trackPageview']);
    (function() {
      var ga = document.createElement('script');
      ga.type = 'text/javascript';
      ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0];
      s.parentNode.insertBefore(ga, s);
    })();
        