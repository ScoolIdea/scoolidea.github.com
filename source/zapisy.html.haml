      %input{:type => 'text', :name => 'Filia/szkola'}
    %div
      %label{:for => 'Nr kontaktowy'} Nr&nbsp;kontaktowy:
      %input{:type => 'text', :name => 'Nr kontaktowy'}
    %div
      %label{:for => 'Adres e-mail'} Adres e-mail:
      %input{:type => 'text', :name => 'Adres e-mail'}
    %div
      %label{:for => 'Rodzaj kursu'} Rodzaj kursu (patrz cennik):
      %input{:type => 'text', :name => 'Rodzaj kursu'}
    %div
      %label{:for => 'Uwagi'} Uwagi:
      %input{:type => 'text', :name => 'Uwagi'}
